{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Lines</h1>

		<table>
			<tr>
				<th>train type</th>
				<th>departure</th>
				<th>departure time</th>
				<th>arrival</th>
				<th>arrival time</th>
				<th>delay</th>
			</tr>
			{% for line in lines %}
				<tr>
					<td>{{ line.train.type }}</td>
					{% for stop in line.getStops() %}

						{% if stop.dateTimeArrival is null %}
							<td>{{ stop.station.name }}</td>
							<td>{{ stop.dateTimeDeparture|date('H:i')}}</td>
						{% endif %}
					{% endfor %}
					{% for stop in line.getStops() %}
						{% if stop.dateTimeDeparture is null %}
							<td>{{ stop.station.name }}</td>
							<td>{{ stop.dateTimeArrival|date('H:i')}}</td>
						{% endif %}
					{% endfor %}
					<td>{{ line.delay }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
